{
	"$schema": "./hydepanel.schema.json",
	"widgets": {
		"battery": {
			"full_battery_level": 100,
			"hide_label_when_full": true,
			"label": true,
			"tooltip": true,
			"orientation": "vertical",
			"icon_size": 14,
			"notifications": {
				"low_threshold": 10,
				"full_battery": false,
				"low_battery": false
			}
		},
		"overview": {
			"icon": "󰡃",
			"tooltip": true,
			"label": false
		},
		"power": {
			"icon": "󰐥",
			"tooltip": true,
			"items_per_row": 3,
			"icon_size": 100,
			"show_icon": true,
			"label": false,
			"buttons": {
				"shutdown": "systemctl poweroff",
				"reboot": "systemctl reboot",
				"hibernate": "systemctl hibernate",
				"suspend": "systemctl suspend",
				"lock": "loginctl lock-session",
				"logout": "loginctl terminate-user $USER"
			}
		},
		"recorder": {
			"path": "Videos/Screencasting",
			"audio": true,
			"icon_size": 16,
			"tooltip": true
		},
		"screenshot": {
			"path": "Pictures/Screenshots",
			"icon_size": 16,
			"tooltip": true,
			"icon": "󰄀"
		},
		"network_usage": {
			"upload_icon": "",
			"download_icon": "",
			"tooltip": true,
			"upload": true,
			"download": false
		},
		"quick_settings": {
			"user": {
				"avatar": "~/.face",
				"name": "system",
				// system means it will use the system user name, you can also use your own name
				"distro_icon": true
			},
			"controls": {
				"sliders": [
					"brightness",
					"volume"
				]
			},
			"auto_hide": false,
			"auto_hide_timeout": 2000,
			"media": {
				"enabled": true,
				"ignore": [
				],
				"truncation_size": 30,
				"show_album": true,
				"show_artist": true,
				"show_time": true,
				"show_time_tooltip": true
			},
			"shortcuts": {
				"enabled": true,
				"items": [
					{
						"icon": "",
						"label": "Terminal",
						"command": "kitty",
						"tooltip": "Open terminal",
						"icon_size": 18
					},
					{
						"icon": "",
						"label": "Browser",
						"command": "firefox",
						"tooltip": "Launch Firefox",
						"icon_size": 18
					}
				]
			}
		},
		"stopwatch": {
			"stopped_icon": "󱫞",
			"running_icon": "󱫠"
		},
		"storage": {
			"show_icon": true,
			"icon": "󰋊",
			"mode": "label",
			"tooltip": true,
			"graph_length": 4
		},
		"system_tray": {
			"icon_size": 16,
			"ignored": [], // do not show these icons in the system tray
			"hidden": []
		},
		"taskbar": {
			"icon_size": 22,
			"ignored": [], // do not show these icons in the task bar
			"tooltip": true
		},
		"theme_switcher": {
			"icon": "",
			"notify": false
		},
		"updates": {
			"show_icon": true,
			"icon": "󱧘",
			"os": "arch",
			"interval": 3600,
			"tooltip": true,
			"label": true,
			"flatpak": true,
			"snap": false,
			"brew": false
		},
		"volume": {
			"label": true,
			"tooltip": true,
			"step_size": 5
		},
		"hyprpicker": {
			"icon": "",
			"tooltip": true,
			"label": false,
			"show_icon": true
		},
		"weather": {
			"location": "kathmandu", // this is the location to show the weather, you can use city name, latitude, longitude or zip code or leave it empty to use the default location
			"label": true,
			"tooltip": true,
			"temperature_unit": "celsius",
			"wind_speed_unit": "kmh",
			"expanded": true, // this is to show the expanded weather widget
			"interval": 3600 // this is the interval in seconds to update the weather, 1 hour is 3600 seconds
		},
		"window_title": {
			"icon": true, // this is to enable the icon in the window title widget
			"tooltip": true,
			"truncation": true,
			"truncation_size": 50,
			"title_map": []
		},
		"workspaces": {
			"count": 8, // this is the number of workspaces to show
			"hide_unoccupied": true,
			"default_label_format": "{id}",
			"ignored": [
				-99
			], // this is the list of workspaces to ignore, currently -99 is the scratchpad workspace
			"reverse_scroll": false,
			"empty_scroll": false,
			"icon_map": {}
		},
		"bluetooth": {
			"icon_size": 14,
			"label": true,
			"tooltip": true
		},
		"brightness": {
			"label": true,
			"tooltip": true,
			"step_size": 5
		},
		"cava": {
			"bars": 10,
			"color": "#89b4fa"
		},
		"click_counter": {
			"count": 0
		},
		"cpu": {
			"show_icon": true,
			"icon": "",
			"mode": "graph",
			"tooltip": true,
			"temperature_unit": "celsius",
			"round": true,
			"show_unit": true,
			"sensor": "acpitz",
			"graph_length": 4
		},
		"date_time": {
			"format": "%b %d %H:%M",
			"notification": {
				"enabled": true,
				"count": true,
				"hide_count_on_zero": true
			},
			"calendar": true,
			"clock_format": "24h",
			"auto_hide": false,
			"auto_hide_timeout": 2000
		},
		"hypridle": {
			"enabled_icon": "",
			"disabled_icon": "",
			"label": true,
			"tooltip": true
		},
		"hyprsunset": {
			"temperature": "2800k",
			"enabled_icon": "󱩌",
			"disabled_icon": "󰛨",
			"label": true,
			"tooltip": true
		},
		"keyboard": {
			"icon": "󰌌",
			"label": true,
			"tooltip": true,
			"show_icon": false
		},
		"window_count": {
			"icon": "",
			"label_format": "[{count}]",
			"tooltip": true,
			"show_icon": false,
			"hide_when_zero": true
		},
		"language": {
			"truncation_size": 2, // this is the number of characters to show in the language widget
			"tooltip": true,
			"icon": "",
			"show_icon": false
		},
		"memory": {
			"show_icon": true,
			"icon": "",
			"mode": "progress",
			"tooltip": true,
			"graph_length": 4
		},
		"cliphist": {
			"icon": "",
			"label": false,
			"tooltip": true
		},
		"kanban": {
			"icon": "󱞁",
			"label": false,
			"tooltip": true
		},
		"emoji_picker": {
			"icon": "",
			"label": false,
			"tooltip": true
		},
		"submap": {
			"icon": "󰌌",
			"label": true,
			"tooltip": true,
			"show_icon": false
		},
		"microphone": {
			"label": false,
			"tooltip": true
		},
		"ocr": {
			"icon": "󰐳",
			"tooltip": true,
			"label": false,
			"show_icon": true
		},
		"mpris": {
			"truncation_size": 10,
			"tooltip": false
		},
		"world_clock": {
			"icon": "󱉊",
			"show_icon": true,
			"timezones": [
				"America/New_York",
				"Europe/London",
				"Asia/Tokyo"
			]
		}
	},
	"layout": {
		"left_section": [
			"workspaces",
			"window_title"
		], // this is the left section of the panel
		"middle_section": [
			"date_time",
			"weather"
		], // this is the middle section of the panel
		"right_section": [
			"recorder",
			"@group:1",
			"@group:0",
			"system_tray"
		] // this is the right section of the panel
	},
	"widget_groups": [ // widget groups are used to group multiple modules together, you can create multiple groups and access as @group:0, @group:1, etc
		{
			"widgets": [
				"updates",
				"cliphist",
				"battery"
			],
			"spacing": 4,
			"style_classes": [
				"compact"
			]
		},
		{
			"widgets": [
				"quick_settings"
			],
			"spacing": 0,
			"style_classes": [
				"compact"
			]
		}
	],
	"modules": {
		"app_launcher": {
			"enabled": true,
			"tooltip": true,
			"icon_size": 30,
			"ignored_apps": []
		},
		"notification": {
			"enabled": true,
			"anchor": "top-right",
			"auto_dismiss": true,
			"ignored": [],
			"timeout": 3000,
			"transition_type": "slide-left",
			"transition_duration": 350,
			"play_sound": true,
			"sound_file": "notification4",
			"display_actions_on_hover": false, // this is to display the actions on hover
			"dismiss_on_hover": true // this is to dismiss the notification on hover
		},
		"osd": {
			"enabled": true,
			"timeout": 2000,
			"icon_size": 28,
			"orientation": "horizontal", // this is the orientation of the OSD, you can use vertical or horizontal
			"anchor": "bottom-center", // this is the position of the OSD, you can use top-center, top-left, top-right, bottom-center, bottom-left, bottom-right
			"percentage": true
		},
		"screen_corners": {
			"enabled": false,
			"size": 12
		},
		"dock": {
			"enabled": false,
			"icon_size": 30,
			"anchor": "bottom-center",
			"ignored_apps": [],
			"layer": "bottom",
			"pinned_apps": [
				"vivaldi",
				"wezterm",
				"persepolis",
				"code"
			]
		},
		"desktop_clock": {
			"enabled": false,
			"anchor": "bottom-right",
			"date_format": "%A, %d %B %Y",
			"layer": "bottom"
		}
	},
	"general": {
		"check_updates": false,
		"layer": "top",
		"auto_hide": false,
		"debug": true,
		"monitor_styles": true,
		"location": "top"
	}

}
