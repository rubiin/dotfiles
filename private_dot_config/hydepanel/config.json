{
	"$schema": "./hydepanel.schema.json",
	"battery": {
		"full_battery_level": 100,
		"hide_label_when_full": true,
		"label": true,
		"tooltip": true,
		"orientation": "vertical",
		"icon_size": 14,
		"notifications": {
			"low_threshold": 10,
			"full_battery": false,
			"low_battery": false
		}
	},
	"bluetooth": {
		"icon_size": 14,
		"label": true,
		"tooltip": true
	},
	"brightness": {
		"label": true,
		"tooltip": true,
		"step_size": 5
	},
	"cava": {
		"bars": 10,
		"color": "#89b4fa"
	},
	"click_counter": {
		"count": 0
	},
	"cpu": {
		"show_icon": true,
		"icon": "",
		"mode": "graph",
		"tooltip": true,
		"temperature_unit": "celsius",
		"round": true,
		"show_unit": true,
		"sensor": "acpitz",
		"graph_length": 4
	},
	"date_time": {
		"format": "%b %d %H:%M",
		"notification": {
			"enabled": true,
			"count": true,
			"hide_count_on_zero": true
		},
		"calendar": true,
		"clock_format": "24h",
		"uptime": true,
		"auto_hide": false,
		"auto_hide_timeout": 2000
	},
	"hypr_idle": {
		"enabled_icon": "",
		"disabled_icon": "",
		"label": true,
		"tooltip": true
	},
	"hypr_sunset": {
		"temperature": "2800k",
		"enabled_icon": "󱩌",
		"disabled_icon": "󰛨",
		"label": true,
		"tooltip": true
	},
	"keyboard": {
		"icon": "󰌌",
		"label": true,
		"tooltip": true,
		"show_icon": false
	},
	"window_count": {
		"icon": "",
		"label_format": "[{count}]",
		"tooltip": true,
		"show_icon": false,
		"hide_when_zero": true
	},
	"language": {
		"truncation_size": 2, // this is the number of characters to show in the language widget
		"tooltip": true,
		"icon": "",
		"show_icon": false
	},
	"memory": {
		"show_icon": true,
		"icon": "",
		"mode": "progress",
		"tooltip": true,
		"graph_length": 4
	},
	"cliphist": {
		"icon": "",
		"label": false,
		"tooltip": true
	},
	"kanban": {
		"icon": "󱞁",
		"label": false,
		"tooltip": true
	},
	"emoji_picker": {
		"icon": "",
		"label": false,
		"tooltip": true
	},
	"submap": {
		"icon": "󰌌",
		"label": true,
		"tooltip": true,
		"show_icon": false
	},
	"microphone": {
		"label": false,
		"tooltip": true
	},
	"ocr": {
		"icon": "󰐳",
		"tooltip": true,
		"label": false,
		"show_icon": true
	},
	"mpris": {
		"truncation_size": 10,
		"tooltip": false
	},
	"world_clock": {
		"icon": "󱉊",
		"show_icon": true,
		"timezones": [
			"America/New_York",
			"Europe/London",
			"Asia/Tokyo"
		]
	},
	"layout": {
		"left_section": [
			"@group:0",
			"window_title"
		], // this is the left section of the panel
		"middle_section": [
			"date_time"
		], // this is the middle section of the panel
		"right_section": [
			"recorder",
			"@group:2",
			"@group:1",
			"system_tray"
		] // this is the right section of the panel
	},
	"widget_groups": [ // module groups are used to group multiple modules together, you can create multiple groups and access as @group:0, @group:1, etc
		{
			"widgets": [
				"workspaces",
				"window_count"
			],
			"spacing": 1,
			"style_classes": [
				"compact"
			]
		},
		{
			"widgets": [
				"updates",
				"ocr",
				"battery"
			],
			"spacing": 4,
			"style_classes": [
				"compact"
			]
		},
		{
			"widgets": [
				"quick_settings"
			],
			"spacing": 0,
			"style_classes": [
				"compact"
			]
		}
	],
	"modules": {
		"app_launcher": {
			"enabled": true,
			"tooltip": true,
			"icon_size": 30,
			"ignored_apps": []
		},
		"notification": {
			"enabled": true,
			"anchor": "top-right",
			"auto_dismiss": true,
			"ignored": [],
			"timeout": 3000,
			"transition_type": "slide-left",
			"transition_duration": 350,
			"play_sound": true,
			"sound_file": "notification4",
			"display_actions_on_hover": false, // this is to display the actions on hover
			"dismiss_on_hover": true // this is to dismiss the notification on hover
		},
		"osd": {
			"enabled": true,
			"timeout": 2000,
			"icon_size": 28,
			"anchor": "bottom-center", // this is the position of the OSD, you can use top-center, top-left, top-right, bottom-center, bottom-left, bottom-right
			"percentage": true
		},
		"screen_corners": {
			"enabled": false,
			"size": 12
		},
		"dock": {
			"enabled": false,
			"icon_size": 30,
			"anchor": "bottom-center",
			"ignored_apps": [],
			"layer": "bottom",
			"pinned_apps": [
				"vivaldi",
				"wezterm",
				"persepolis",
				"code"
			]
		},
		"desktop_clock": {
			"enabled": true,
			"anchor": "bottom-right",
			"date_format": "%A, %d %B %Y",
			"layer": "bottom"
		}
	},
	"general": {
		"check_updates": false,
		"layer": "top",
		"auto_hide": false,
		"debug": true,
		"monitor_styles": true,
		"location": "top"
	},
	"overview": {
		"icon": "󰡃",
		"tooltip": true,
		"label": false
	},
	"power": {
		"icon": "󰐥",
		"tooltip": true,
		"items_per_row": 3,
		"icon_size": 100,
		"show_icon": true,
		"label": false,
		"buttons": {
			"shutdown": "systemctl poweroff",
			"reboot": "systemctl reboot",
			"hibernate": "systemctl hibernate",
			"suspend": "systemctl suspend",
			"lock": "loginctl lock-session",
			"logout": "loginctl terminate-user $USER"
		}
	},
	"recorder": {
		"path": "Videos/Screencasting",
		"audio": true,
		"icon_size": 16,
		"tooltip": true
	},
	"screen_shot": {
		"path": "Pictures/Screenshots",
		"icon_size": 16,
		"tooltip": true,
		"icon": "󰄀"
	},
	"network_usage": {
		"upload_icon": "",
		"download_icon": "",
		"tooltip": true,
		"upload": true,
		"download": false
	},
	"quick_settings": {
		"user": {
			"avatar": "~/.face",
			"name": "system",
			// system means it will use the system user name, you can also use your own name
			"distro_icon": true
		},
		"controls": {
			"sliders": [
				"brightness",
				"volume"
			]
		},
		"auto_hide": false,
		"auto_hide_timeout": 2000,
		"media": {
			"enabled": true,
			"ignore": [
				"vlc"
			],
			"truncation_size": 30,
			"show_album": true,
			"show_artist": true,
			"show_time": true,
			"show_time_tooltip": true
