		"auto_dismiss": true,
		"ignored": [],
		"timeout": 3000,
		"transition_type": "slide-left",
		"transition_duration": 350,
		"play_sound": true,
		"sound_file": "notification4",
		"max_count": 200,
		"display_actions_on_hover": false // this is to display the actions on hover
	},
	"osd": {
		"enabled": true,
		"timeout": 2000,
		"icon_size": 28,
		"anchor": "bottom-center", // this is the position of the OSD, you can use top-center, top-left, top-right, bottom-center, bottom-left, bottom-right
		"percentage": true
	},
	"general": {
		"screen_corners": {
			"enabled": false,
			"size": 12
		},
		"dock": {
			"enabled": false,
			"icon_size": 30,
			"anchor": "bottom-center",
			"ignored_apps": [],
			"layer": "top",
			"pinned_apps": [
				"vivaldi",
				"wezterm",
				"persepolis",
				"code"
			]
		},
		"desktop_clock": {
			"enabled": true,
			"anchor": "bottom-right",
			"date_format": "%A, %d %B %Y"
		},
		"check_updates": false,
		"layer": "top",
		"auto_hide": false,
