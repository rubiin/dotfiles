{
	"$schema": "./hydepanel.schema.json",
	"battery": {
		"full_battery_level": 100,
		"hide_label_when_full": true,
		"label": true,
		"tooltip": true,
		"orientation": "vertical",
		"icon_size": 14,
		"notifications": {
			"low_threshold": 10,
			"full_battery": false,
			"low_battery": false
		}
	},
	"bluetooth": {
		"icon_size": 14,
		"label": true,
		"tooltip": true
	},
	"brightness": {
		"label": true,
		"tooltip": true,
		"step_size": 5
	},
	"cava": {
		"bars": 10,
		"color": "#89b4fa"
	},
	"click_counter": {
		"count": 0
	},
	"cpu": {
		"show_icon": true,
		"icon": "",
		"label": true,
		"tooltip": true,
		"unit": "celsius",
		"round": true,
		"show_unit": true,
		"sensor": "acpitz",
		"graph": false,
		"graph_length": 4
	},
	"date_time": {
		"format": "%b %d %H:%M",
		"notification_count": true,
		"notification": true,
		"calendar": true,
		"clock_format": "24h",
		"uptime": true,
		"auto_hide": false,
		"auto_hide_timeout": 2000
	},
	"hypr_idle": {
		"enabled_icon": "",
		"disabled_icon": "",
		"label": true,
		"tooltip": true
	},
	"hypr_sunset": {
		"temperature": "2800k",
		"enabled_icon": "󱩌",
		"disabled_icon": "󰛨",
		"label": true,
		"tooltip": true
	},
	"keyboard": {
		"icon": "󰌌",
		"label": true,
		"tooltip": true,
		"show_icon": false
	},
	"window_count": {
		"icon": "",
		"label_format": "[{count}]",
		"tooltip": true,
		"show_icon": false
	},
	"language": {
		"truncation_size": 2, // this is the number of characters to show in the language widget
		"tooltip": true,
		"icon": "",
		"show_icon": false
	},
	"layout": {
		"left_section": [
			"@group:0",
			"window_title"
		], // this is the left section of the panel
		"middle_section": [
			"date_time"
		], // this is the middle section of the panel
		"right_section": [
			"recorder",
			"@group:2",
			"@group:1",
			"system_tray"
		] // this is the right section of the panel
	},
	"module_groups": [ // module groups are used to group multiple modules together, you can create multiple groups and access as @group:0, @group:1, etc
		{
			"widgets": [
				"workspaces",
				"window_count"
			],
			"spacing": 1,
			"style_classes": [
				"compact"
			]
		},
		{
			"widgets": [
				"updates",
				"ocr",
				"battery"
			],
			"spacing": 4,
			"style_classes": [
				"compact"
			]
		},
		{
			"widgets": [
				"quick_settings"
			],
			"spacing": 0,
			"style_classes": [
				"compact"
			]
		}
	],
	"memory": {
		"show_icon": true,
		"icon": "",
		"label": true,
		"tooltip": true,
		"graph": false,
		"graph_length": 4
	},
	"submap": {
