import = [
  # uncomment the flavour you want below:
  "~/.config/alacritty/themes/catppuccin_mocha.toml"
  # "~/.config/alacritty/themes/catppuccin_macchiato.toml"
  # "~/.config/alacritty/themes/catppuccin_frappe.toml"
  # "~/.config/alacritty/themes/catppuccin_latte.toml"
]

live_config_reload = true
working_directory = "None"

[bell]
animation = "EaseOutExpo"
color = "0xffffff"
duration = 0

[colors]
draw_bold_text_with_bright_colors = true


[cursor]
style = "Block"
unfocused_hollow = true
vi_mode_style = "Block"

[debug]
log_level = "Off"
persistent_logging = false
print_events = false
render_timer = false

{{ if eq .chezmoi.username "devina" }}
[font]
size = 10
{{ else }}
[font]
size = 11
{{ end }}


[font.glyph_offset]
x = 0
y = 0

[font.normal]
family = "JetBrainsMono Nerd Font"
style = "Regular"

[font.bold]
family = "JetBrainsMono Nerd Font"
style = "Bold"

[font.italic]
family = "JetBrainsMono Nerd Font"
style = "Italic"

[font.bold_italic]
family = "JetBrainsMono Nerd Font"
style = "Bold Italic"

[font.offset]
x = 0
y = 0

[mouse]
hide_when_typing = true

[[mouse.bindings]]
action = "PasteSelection"
mouse = "Middle"

[scrolling]
history = 10000
multiplier = 3

[selection]
save_to_clipboard = true
semantic_escape_chars = ",â”‚`|:\"' ()[]{}<>"

[window]
title = "alacritty"
decorations = "full"
dynamic_padding = false
opacity = 0.98
startup_mode = "Windowed"

[window.dimensions]
columns = 140
lines = 40

[window.padding]
x= 0
y = 0

[window.class]
general = "Alacritty"
instance = "Alacritty"

