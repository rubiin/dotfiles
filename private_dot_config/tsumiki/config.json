{
	"$schema": "./tsumiki.schema.json",
	"widgets": {
		"app_launcher_button": {
			"tooltip": true,
			"icon": "view-app-grid-symbolic",
			"icon_size": 20
		},
		"battery": {
			"label": true,
			"tooltip": true,
			"icon_size": 14,
			"hide_label_when_full": true,
			"hide_when_missing": true,
			"notifications": {
				"low_threshold": 10,
				"full_battery": false,
				"low_battery": false,
				"charging": false
			}
		},
		"overview_button": {
			"icon": "󰡃",
			"tooltip": true,
			"label": false
		},
		"power": {
			"icon": "󰐥",
			"tooltip": true,
			"items_per_row": 3,
			"icon_size": 100,
			"show_icon": true,
			"label": false,
			"confirm": true,
			"buttons": {
				"shutdown": "systemctl poweroff",
				"reboot": "systemctl reboot",
				"hibernate": "systemctl hibernate",
				"suspend": "systemctl suspend",
				"lock": "loginctl lock-session",
				"logout": "loginctl terminate-user $USER"
			}
		},
		"recorder": {
			"path": "Videos/Screencasting",
			"audio": true,
			"tooltip": true,
			"delayed": false,
			"delayed_timeout": 5000
		},
		"screenshot": {
			"path": "Pictures/Screenshots",
			"tooltip": true,
			"label": false,
			"annotation": false,
			"capture_sound": false,
			"icon": "󰄀",
			"delayed": false,
			"delayed_timeout": 5000
		},
		"network_usage": {
			"upload_icon": "",
			"download_icon": "",
			"tooltip": true,
			"upload": true,
			"download": true,
			"upload_threshold": 100,
			"download_threshold": 1024,
			"kb_digits": 0,
			"mb_digits": 2
		},
		"quick_settings": {
			"hover_reveal": false,
			"user": {
				"avatar": "~/.face",
				"name": "system",
				"distro_icon": true
			},
			"controls": {
				"sliders": [
					"brightness",
					"volume"
				]
			},
			"auto_hide": false,
			"auto_hide_timeout": 2000,
			"media": {
				"enabled": true,
				"ignore": [],
				"truncation_size": 30,
				"show_album": true,
				"show_artist": true,
				"show_time": true,
				"show_time_tooltip": true
			},
			"shortcuts": {
				"enabled": true,
				"items": [
					{
						"icon": "",
						"label": "Terminal",
						"command": "kitty",
						"tooltip": "Open terminal",
						"icon_size": 18
					},
					{
						"icon": "",
						"label": "Browser",
						"command": "firefox",
						"tooltip": "Launch Firefox",
						"icon_size": 18
					},
					{
						"icon": "",
						"label": "Spotify",
						"command": "spotify",
						"tooltip": "Launch Spotify",
						"icon_size": 18
					},
					{
						"icon": "",
						"label": "Code",
						"command": "code",
						"tooltip": "Launch Code",
						"icon_size": 18
					}
				]
			}
		},
		"stopwatch": {
			"stopped_icon": "󱫞",
			"running_icon": "󱫠"
		},
		"storage": {
			"path": "/",
			"show_icon": true,
			"icon": "󰋊",
			"mode": "label",
			"tooltip": true,
			"graph_length": 4,
			"unit": "gb"
		},
		"system_tray": {
			"icon_size": 16,
			"ignored": [],
			"hidden": [],
			"hide_when_empty": false
		},
		"taskbar": {
			"icon_size": 22,
			"ignored": [],
			"tooltip": true
		},
		"theme_switcher": {
			"icon": "",
			"notify": false
		},
		"updates": {
			"show_icon": true,
			"available_icon": "󰏗",
			"no_updates_icon": "󰏖",
			"hover_reveal": true,
			"reveal_duration": 500,
			"os": "arch",
			"terminal": "kitty",
			"auto_hide": false,
			"interval": 3600,
			"pad_zero": false,
			"tooltip": true,
			"label": true,
			"flatpak": true,
			"snap": false,
			"brew": false
		},
		"volume": {
			"label": true,
			"tooltip": true,
			"step_size": 5
		},
		"hyprpicker": {
			"icon": "",
			"tooltip": true,
			"label": false,
			"show_icon": true,
			"quiet": false
		},
		"weather": {
			"location": "kathmandu",
			"label": true,
			"tooltip": true,
			"temperature_unit": "celsius",
			"label_format": "{temperature} {condition}",
			"wind_speed_unit": "kmh",
			"hover_reveal": true,
			"reveal_duration": 500,
			"expanded": true,
			"interval": 3600
		},
		"window_title": {
			"icon": true,
			"tooltip": true,
			"truncation": true,
			"truncation_size": 50,
			"mappings": true,
			"title_map": [],
			"fallback": "class"
		},
		"workspaces": {
			"count": 10,
			"hide_unoccupied": true,
			"default_label_format": "{id}",
			"ignored": [
				-99
			],
			"reverse_scroll": false,
			"empty_scroll": false,
			"icon_map": {}
		},
		"bluetooth": {
			"label": true,
			"tooltip": true
		},
		"brightness": {
			"label": true,
			"tooltip": true,
			"step_size": 5
		},
		"cava": {
			"bars": 10,
			"color": "#89b4fa"
		},
		"click_counter": {
			"count": 0
		},
		"cpu": {
			"show_icon": true,
			"icon": "",
			"mode": "label",
			"tooltip": true,
			"temperature_unit": "celsius",
			"round": true,
			"show_unit": true,
			"sensor": "acpitz",
			"graph_length": 4
		},
		"gpu": {
			"show_icon": true,
			"icon": "",
			"tooltip": true,
			"mode": "circular",
			"graph_length": 4
		},
		"date_time": {
			"format": "%b %d %H:%M",
			"calendar": true,
			"clock_format": "24h",
			"auto_hide": false,
			"auto_hide_timeout": 2000,
			"hover_reveal": false,
			"reveal_duration": 500,
			"notification": {
				"enabled": true,
				"count": true,
				"hide_count_on_zero": true
			}
		},
		"hypridle": {
			"enabled_icon": "",
			"disabled_icon": "",
			"label": true,
			"tooltip": true
		},
		"hyprsunset": {
			"temperature": "2800k",
			"enabled_icon": "󱩌",
			"disabled_icon": "󰛨",
			"label": true,
			"tooltip": true
		},
		"keyboard": {
			"icon": "󰌌",
			"label": true,
			"tooltip": true,
			"show_icon": false
		},
		"window_count": {
			"icon": "",
			"label_format": "[{count}]",
			"tooltip": true,
			"show_icon": false,
			"hide_when_zero": true
		},
		"language": {
			"truncation_size": 2,
			"tooltip": true,
			"icon": "",
			"show_icon": false
		},
		"memory": {
			"show_icon": true,
			"icon": "",
			"mode": "label",
			"tooltip": true,
			"graph_length": 4,
			"unit": "gb"
		},
		"cliphist": {
			"icon": "",
			"label": false,
			"tooltip": true
		},
		"kanban": {
			"icon": "󱞁",
			"label": false,
			"tooltip": true
		},
		"emoji_picker": {
			"icon": "",
			"label": false,
			"tooltip": true,
			"per_row": 9,
			"per_column": 4
		},
		"submap": {
			"icon": "󰌌",
			"label": true,
			"tooltip": true,
			"show_icon": false,
			"hide_on_default": false
		},
		"microphone": {
			"label": false,
			"tooltip": true,
			"show_icon": true
		},
		"ocr": {
			"icon": "󰐳",
			"tooltip": true,
			"label": false,
			"show_icon": true,
			"quiet": false
		},
		"mpris": {
			"truncation_size": 10,
			"tooltip": false
		},
		"world_clock": {
			"icon": "󰃰",
			"show_icon": true,
			"use_24hr": true,
			"timezones": [
				"America/New_York",
				"Asia/Tokyo"
			]
		},
		"custom_button_group": {
			"buttons": [
				{
					"command": "firefox",
					"icon": "󰈹",
					"label_text": "Firefox",
					"tooltip_text": "Open Firefox Browser",
					"show_icon": true,
					"label": false,
					"tooltip": true
				},
				{
					"command": "spotify",
					"icon": "",
					"label_text": "Spotify",
					"tooltip_text": "Open Spotify",
					"show_icon": true,
					"label": false,
					"tooltip": true
				}
			],
			"spacing": 4
		}
	},
	"layout": {
		"left_section": [
			"workspaces",
			"window_title"
		],
		"middle_section": [
			"date_time",
			"weather"
		],
		"right_section": [
			"@collapsible:0",
			"@group:0",
			"system_tray",
			"power"
		]
	},
	"widget_groups": [
		{
			"widgets": [
				"quick_settings",
				"updates",
				"battery"
			],
			"spacing": 2,
			"style_classes": [
				"compact"
			]
		},
		{
			"widgets": [
				"quick_settings"
			],
			"spacing": 0,
			"style_classes": [
				"compact"
			]
		}
	],
	"collapsible_groups": [
		{
			"widgets": [
				"cliphist",
				"emoji_picker",
				"ocr",
				"screenshot",
				"recorder"
			],
			"spacing": 4,
			"icon": "󰒓",
			"tooltip": "Utility Tools",
			"style_classes": [
				"utility-tools"
			]
		}
	],
	"modules": {
		"bar": {
			"layer": "background",
			"auto_hide": false,
			"location": "top"
		},
		"app_launcher": {
			"enabled": true,
			"tooltip": false,
			"icon_size": 40,
			"ignored": [],
			"anchor": "center",
			"width": 280,
			"height": 320,
			"layout": "list",
			"grid_columns": 3
		},
		"overview": {
			"enabled": false,
			"layer": "top",
			"anchor": "center",
			"transition_type": "crossfade",
			"transition_duration": 350
		},
		"notification": {
			"enabled": true,
			"dnd_on_screencast": true,
			"anchor": "top-right",
			"auto_dismiss": true,
			"ignored": [],
			"timeout": 3000,
			"max_actions": 3,
			"play_sound": true,
			"per_app_limits": {},
			"sound_file": "notification4",
			"transition_type": "slide-left",
			"transition_duration": 350,
			"persist": true,
			"dismiss_on_hover": false
		},
		"osd": {
			"enabled": true,
			"timeout": 3000,
			"icon_size": 28,
			"transition_type": "slide-up",
			"transition_duration": 500,
			"play_sound": false,
			"orientation": "horizontal",
			"anchor": "bottom-center",
			"percentage": true,
			"osds": [
				"brightness",
				"volume"
			]
		},
		"screen_corners": {
			"enabled": false,
			"size": 20
		},
		"dock": {
			"enabled": true,
			"tooltip": false,
			"behavior": "intellihide",
			"icon_size": 40,
			"preview_apps": true,
			"preview_size": [
				200,
				130
			],
			"show_when_no_windows": false,
			"ignored": [],
			"always_show_focused": true,
			"hide_special_workspace_apps": false,
			"layer": "top"
		},
		"desktop_clock": {
			"enabled": false,
			"anchor": "bottom-right",
			"date_format": "%A, %d %B %Y",
			"layer": "bottom",
			"time_format": "%H:%M"
		},
		"desktop_quotes": {
			"enabled": false,
			"anchor": "bottom-right",
			"layer": "bottom",
			"interval": 600
		},
		"activate_linux": {
			"enabled": false,
			"anchor": "bottom-right",
			"layer": "bottom"
		}
	},
	"general": {
		"check_updates": false,
		"debug": false,
		"monitor_styles": false,
		"auto_reload": true,
		"multi_monitor": false
	}
}
