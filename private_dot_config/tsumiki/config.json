{
	"$schema": "./tsumiki.schema.json",
	"widgets": {
		"battery": {
			"full_battery_level": 100,
			"hide_label_when_full": true,
			"hide_when_missing": true,
			"label": true,
			"tooltip": true,
			"orientation": "vertical",
			"icon_size": 14,
			"notifications": {
				"low_threshold": 10,
				"full_battery": false,
				"low_battery": false
			}
		},
		"overview": {
			"icon": "󰡃",
			"tooltip": true,
			"label": false,
			"show_occupied": true
		},
		"power": {
			"icon": "󰐥",
			"tooltip": true,
			"items_per_row": 3,
			"icon_size": 100,
			"show_icon": true,
			"label": false,
			"buttons": {
				"shutdown": "systemctl poweroff",
				"reboot": "systemctl reboot",
				"hibernate": "systemctl hibernate",
				"suspend": "systemctl suspend",
				"lock": "loginctl lock-session",
				"logout": "loginctl terminate-user $USER"
			}
		},
		"recorder": {
			"path": "Videos/Screencasting",
			"audio": true,
			"tooltip": true,
			"delayed": false, // this is to enable delayed recording, it will start recording after a delay of 5 seconds
			"delayed_timeout": 5000
		},
		"screenshot": {
			"path": "Pictures/Screenshots",
			"tooltip": true,
			"label": false,
			"annotation": true,
			"capture_sound": true,
			"icon": "󰄀",
			"delayed": false,
			"delayed_timeout": 5000
		},
		"network_usage": {
			"upload_icon": "",
			"download_icon": "",
			"tooltip": true,
			"upload": true,
			"download": true,
			"upload_threshold": 100,
			"download_threshold": 1024,
			"kb_digits": 0,
			"mb_digits": 2
		},
		"quick_settings": {
			"user": {
				"avatar": "~/.face",
				"name": "system",
				// system means it will use the system user name, you can also use your own name
				"distro_icon": true
			},
			"controls": {
				"sliders": [
					"brightness",
					"volume"
				]
			},
			"auto_hide": false,
			"auto_hide_timeout": 2000,
			"media": {
				"enabled": true,
				"ignore": [],
				"truncation_size": 30,
				"show_album": true,
				"show_artist": true,
				"show_time": true,
				"show_time_tooltip": true
			},
			"shortcuts": {
				"enabled": true,
				"items": [
					{
						"icon": "",
						"label": "Terminal",
						"command": "kitty",
						"tooltip": "Open terminal",
						"icon_size": 18
					},
					{
						"icon": "",
						"label": "Browser",
						"command": "firefox",
						"tooltip": "Launch Firefox",
						"icon_size": 18
					},
					{
						"icon": "",
						"label": "Spotify",
						"command": "spotify",
						"tooltip": "Launch Spotify",
						"icon_size": 18
					},
					{
						"icon": "",
						"label": "Code",
						"command": "code",
						"tooltip": "Launch Code",
						"icon_size": 18
					}
				]
			}
		},
		"stopwatch": {
			"stopped_icon": "󱫞",
			"running_icon": "󱫠"
		},
		"storage": {
			"show_icon": true,
			"icon": "󰋊",
			"mode": "label",
			"tooltip": true,
			"graph_length": 4
		},
		"system_tray": {
			"icon_size": 16,
			"ignored": [], // do not show these icons in the system tray
			"hidden": [],
			"hide_when_empty": false // set to true to hide the system tray when no items are present
		},
		"taskbar": {
			"icon_size": 22,
			"ignored": [], // do not show these icons in the task bar
			"tooltip": true
		},
		"theme_switcher": {
			"icon": "",
			"notify": false
		},
		"updates": {
			"show_icon": true,
			"available_icon": "󰏗",
			"no_updates_icon": "󰏖",
			"hover_reveal": true, // this is to display the updates on hover
			"reveal_duration": 500, // this is the duration in milliseconds to reveal the updates
			"os": "arch",
			"terminal": "kitty", // terminal to use for updates: "kitty", "foot", "alacritty", "wezterm", etc.
			"auto_hide": false, // this is to auto hide the updates widget when there are no updates available
			"interval": 3600,
			"pad_zero": false, // this is to pad the number of updates with zero
			"tooltip": true,
			"label": true,
			"flatpak": true,
			"snap": false,
			"brew": false
		},
		"volume": {
			"label": true,
			"tooltip": true,
			"step_size": 5
		},
		"hyprpicker": {
			"icon": "",
			"tooltip": true,
			"label": false,
			"show_icon": true
		},
		"weather": {
			"location": "kathmandu", // this is the location to show the weather, you can use city name, latitude, longitude or zip code or leave it empty to use the default location
			"label": true,
			"tooltip": true,
			"temperature_unit": "celsius",
			"wind_speed_unit": "kmh",
			"hover_reveal": true,
			"reveal_duration": 500,
			"expanded": true, // this is to show the expanded weather widget
			"interval": 3600 // this is the interval in seconds to update the weather, 1 hour is 3600 seconds,
		},
		"window_title": {
			"icon": true, // this is to enable the icon in the window title widget
			"tooltip": true,
			"truncation": true,
			"truncation_size": 50,
			"title_map": []
		},
		"workspaces": {
			"count": 10, // this is the number of workspaces to show
			"hide_unoccupied": true,
			"default_label_format": "{id}",
			"ignored": [
				-99
			], // this is the list of workspaces to ignore, currently -99 is the scratchpad workspace
			"reverse_scroll": false,
			"empty_scroll": false,
			"icon_map": {}
		},
		"bluetooth": {
			"icon_size": 14,
			"label": true,
			"tooltip": true
		},
		"brightness": {
			"label": true,
			"tooltip": true,
			"step_size": 5
		},
		"cava": {
			"bars": 10,
			"color": "#89b4fa"
		},
		"click_counter": {
			"count": 0
		},
		"cpu": {
			"show_icon": true,
			"icon": "",
			"mode": "label",
			"tooltip": true,
			"temperature_unit": "celsius",
			"round": true,
			"show_unit": true,
			"sensor": "acpitz",
			"graph_length": 4
		},
		"gpu": {
			"show_icon": true,
			"icon": "",
			"tooltip": true,
			"mode": "label",
			"graph_length": 4
		},
		"date_time": {
			"format": "%b %d %H:%M",
			"notification": {
				"enabled": true,
				"count": true,
				"hide_count_on_zero": true
			},
			"calendar": true,
			"clock_format": "24h",
			"auto_hide": false,
			"auto_hide_timeout": 2000
		},
		"hypridle": {
			"enabled_icon": "",
			"disabled_icon": "",
			"label": true,
			"tooltip": true
		},
		"hyprsunset": {
			"temperature": "2800k",
			"enabled_icon": "󱩌",
			"disabled_icon": "󰛨",
			"label": true,
			"tooltip": true
		},
		"keyboard": {
			"icon": "󰌌",
			"label": true,
			"tooltip": true,
			"show_icon": false
		},
		"window_count": {
			"icon": "",
			"label_format": "[{count}]",
			"tooltip": true,
			"show_icon": false,
			"hide_when_zero": true
		},
		"language": {
			"truncation_size": 2, // this is the number of characters to show in the language widget
			"tooltip": true,
			"icon": "",
			"show_icon": false
		},
		"memory": {
			"show_icon": true,
			"icon": "",
			"mode": "label",
			"tooltip": true,
			"graph_length": 4
		},
		"cliphist": {
			"icon": "",
			"label": false,
			"tooltip": true
		},
		"kanban": {
			"icon": "󱞁",
			"label": false,
			"tooltip": true
		},
		"emoji_picker": {
			"icon": "",
			"label": false,
			"tooltip": true
		},
		"submap": {
			"icon": "󰌌",
			"label": true,
			"tooltip": true,
			"show_icon": false
		},
		"microphone": {
			"label": false,
			"tooltip": true
		},
		"ocr": {
			"icon": "󰐳",
			"tooltip": true,
			"label": false,
			"show_icon": true,
			"quiet": false
		},
		"mpris": {
			"truncation_size": 10,
			"tooltip": false
		},
		"world_clock": {
			"icon": "󰃰",
			"show_icon": true,
			"use_24hr": true, // this is to use 24 hour format, if false it will use 12 hour format
			"timezones": [
				"America/New_York",
				"Europe/London",
				"Asia/Tokyo"
			]
		},
		"custom_button_group": {
			"buttons": [
				{
					"command": "firefox",
					"icon": "󰈹",
					"label_text": "Firefox",
					"tooltip_text": "Open Firefox Browser",
					"show_icon": true,
					"label": false,
					"tooltip": true
				},
				{
					"command": "spotify",
					"icon": "",
					"label_text": "Spotify",
					"tooltip_text": "Open Spotify",
					"show_icon": true,
					"label": false,
					"tooltip": true
				}
			],
			"spacing": 4
		}
	},
	"layout": {
		"left_section": [
			"workspaces",
			"window_title"
		], // this is the left section of the panel
		"middle_section": [
			"date_time",
			"weather"
		], // this is the middle section of the panel
		"right_section": [
			"@collapsible:0",
			"@group:0",
			"system_tray"
		] // this is the right section of the panel
	},
	"widget_groups": [ // widget groups are used to group multiple modules together, you can create multiple groups and access as @group:0, @group:1, etc
		{
			"widgets": [
				"quick_settings",
				"updates",
				"battery"
			],
			"spacing": 2,
			"style_classes": [
				"compact"
			]
		},
		{
			"widgets": [
				"quick_settings"
			],
			"spacing": 0,
			"style_classes": [
				"compact"
			]
		}
	],
	"collapsible_groups": [ // collapsible groups create popup menus with utility widgets, accessed as @collapsible:0, @collapsible:1, etc
		{
			"widgets": [
				"cliphist",
				"emoji_picker",
				"ocr",
				"screenshot",
				"recorder"
			],
			"spacing": 4,
			"icon": "󰒓", // icon for the collapsible group button
			"tooltip": "Utility Tools", // tooltip for the collapsible group button
			"style_classes": [
				"utility-tools"
			]
		}
	],
	"modules": {
		"app_launcher": {
			"enabled": true,
			"tooltip": true,
			"icon_size": 30,
			"ignored": []
		},
		"notification": {
			"enabled": true,
			"dnd_on_screencast": true, // this is to enable Do Not Disturb mode when screencasting
			"anchor": "top-right",
			"auto_dismiss": true,
			"ignored": [],
			"timeout": 3000,
			"max_actions": 3,
			"transition_type": "slide-left",
			"transition_duration": 350,
			"play_sound": true,
			"sound_file": "notification4",
			"persist": true, // this is to persist the notification
			"display_actions_on_hover": false, // this is to display the actions on hover
			"dismiss_on_hover": false // this is to dismiss the notification on hover
		},
		"osd": {
			"enabled": true,
			"timeout": 3000,
			"icon_size": 28,
			"transition_type": "slide-up", // this is the transition type for the OSD, you can use slide-left, slide-right, fade-in, etc.
			"transition_duration": 500, // this is the duration in milliseconds for the transition
			"play_sound": true,
			"orientation": "horizontal", // this is the orientation of the OSD, you can use vertical or horizontal
			"anchor": "bottom-center", // this is the position of the OSD, you can use top-center, top-left, top-right, bottom-center, bottom-left, bottom-right
			"percentage": true,
			"osds": [
				"brightness",
				"volume"
			]
		},
		"screen_corners": {
			"enabled": false,
			"size": 20
		},
		"dock": {
			"enabled": true,
			"tooltip": false,
			"icon_size": 40,
			"anchor": "bottom-center",
			"show_when_no_windows": false, // this is to show the dock when there are no windows in the workspace
			"ignored": [],
			"layer": "top",
			"preview_apps": true, // this is to enable the preview of apps in the dock
			"preview_size": [
				200,
				130
			] // this is the size of the preview, width and height in pixels

		},
		"desktop_clock": {
			"enabled": false,
			"anchor": "bottom-right",
			"date_format": "%A, %d %B %Y",
			"layer": "bottom",
			"time_format": "%H:%M"
		},
		"quotes": {
			"enabled": false,
			"anchor": "bottom-right",
			"layer": "bottom",
			"update_interval": 600 // this is the interval in seconds to update the quotes, 1 hour is 3600 seconds
		}
	},
	"general": {
		"check_updates": false,
		"layer": "overlay",
		"auto_hide": false,
		"debug": false,
		"monitor_styles": true,
		"location": "top"
	}
}
