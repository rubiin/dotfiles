include themes/catppuccin-mocha

# Open document in fit-width mode by default
set adjust-open "best-fit"
set font "MonoLisa Nerd Font"

# One page per row by default
set pages-per-row 1

#stop at page boundaries
set smooth-scroll "true"


set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1

# Enable main clipboard (can paste with `Ctrl-v`)
set selection-clipboard clipboard

# Show status line and vertical scroll bar
set guioptions sv

# zathura supports vim bindings by default
# list of keybindings https://www.maketecheasier.com/cheatsheet/zathura-keyboard-shortcuts/
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
set recolor true
map p prinit


unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen
