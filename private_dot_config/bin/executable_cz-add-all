   "$config/topgrade.toml"
   "$config/mimeapps.list"
   "$config/hypr/userprefs.conf"
   "$config/hypr/hyprshade.toml"
   "$config/persepolis_download_manager/persepolis.conf"
   "$config/electron-flags.conf"
