[Trigger]
Type = Package
Operation = Install
Operation = Upgrade
Operation = Remove
Target = *

[Action]
Description = Create a backup list of all installed packages
When = PreTransaction
Exec = /bin/sh -c 'pacman -Qqen  > "/home/$USER/.config/pacman/pkglist.txt"; pacman -Qqem > "/home/$USER/.config/pacman/pkglist-aur.txt" 2> /dev/null; exit'
